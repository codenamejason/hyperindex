{
  "name": "{{project_name}}",
  "version": "0.1.0",
  "scripts": {
    {{#if is_javascript}}
      "start": "node generated/src/Index.bs.js"
    {{/if}}
    {{#if is_typescript}}
      "clean": "tsc --clean",
      "build": "tsc --build",
      "watch": "tsc --watch",
      "start": "ts-node generated/src/Index.bs.js"
    {{/if}}
    {{#if is_rescript}}
      "clean": "rescript clean -with-deps",
      "build": "rescript build -with-deps",
      "watch": "rescript build -w -with-deps",
      "start": "pnpm build && node generated/src/Index.bs.js"
      {{/if}}
  },
  {{#if is_rescript}}
  "devDependencies": {
    "@glennsl/rescript-fetch": "^0.2.0",
    "@greenlabs/ppx-spice": "0.1.14",
    "@ryyppy/rescript-promise": "^2.1.0",
    "rescript": "^10.1.2",
    "rescript-envsafe": "^1.3.0",
    "rescript-express": "^0.4.1",
    "rescript-struct": "^4.1.1"
  },
  {{/if}}
  {{#if is_typescript}}
  "devDependencies": {
    "@types/node": "^18.16.1",
    "typescript": "^5.0.4"
  },
  {{/if}}
  "dependencies": {
    {{#if is_typescript}}
    "ts-node": "^10.9.1",
    {{/if}}
    "envio": "{{envio_version}}"
  }
}
