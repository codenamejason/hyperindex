{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": {
      "type": "string"
    },
    "repository": {
      "type": "string"
    },
    "networks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "network": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "rpc-url": {
                "type": "string"
              },
              "start-block": {
                "type": "integer"
              }
            },
            "required": [
              "id",
              "rpc-url",
              "start-block"
            ]
          }
        },
        "required": [
          "network"
        ]
      }
    },
    "handler": {
      "type": "string"
    },
    "contracts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "contract": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "abi": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "address": {
                "type": "string"
              },
              "events": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "NewGravatar": {
                      "type": "object",
                      "properties": {
                        "requiredEntities": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "Gravatar": {
                                "type": "object",
                                "properties": {
                                  "allowArbitrary": {
                                    "type": "boolean",
                                    "default": false
                                  },
                                  "labels": {
                                    "type": "array",
                                    "items": {
                                      "type": "string"
                                    }
                                  }
                                },
                                "required": []
                              }
                            }
                          },
                          "default": []
                        }
                      }
                    },
                    "UpdatedGravatar": {
                      "type": "object",
                      "properties": {
                        "requiredEntities": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "Gravatar": {
                                "type": "object",
                                "properties": {
                                  "allowArbitrary": {
                                    "type": "boolean",
                                    "default": false
                                  },
                                  "labels": {
                                    "type": "array",
                                    "items": {
                                      "type": "string"
                                    }
                                  }
                                },
                                "required": []
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            },
            "required": [
              "name",
              "abi",
              "address",
              "events"
            ]
          }
        },
        "required": [
          "contract"
        ]
      }
    }
  },
  "required": [
    "version",
    "networks",
    "contracts"
  ]
}
