{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Envio Config Schema",
  "description": "Schema for a YAML config for an envio indexer",
  "type": "object",
  "properties": {
    "description": {
      "description": "Description of the project",
      "type": ["string", "null"]
    },
    "contracts": {
      "type": ["array", "null"],
      "items": { "$ref": "#/$defs/GlobalContract_for_ContractConfig" }
    },
    "ecosystem": {
      "anyOf": [{ "$ref": "#/$defs/EcosystemTag" }, { "type": "null" }]
    },
    "event_decoder": {
      "anyOf": [{ "$ref": "#/$defs/EventDecoder" }, { "type": "null" }]
    },
    "name": { "description": "Name of the project", "type": "string" },
    "networks": {
      "description": "Configuration of the blockchain networks that the project is deployed on",
      "type": "array",
      "items": { "$ref": "#/$defs/Network" }
    },
    "rollback_on_reorg": { "type": ["boolean", "null"] },
    "save_full_history": { "type": ["boolean", "null"] },
    "schema": {
      "description": "Custom path to config file",
      "type": ["string", "null"]
    },
    "unordered_multichain_mode": { "type": ["boolean", "null"] }
  },
  "required": ["name", "networks"],
  "$defs": {
    "EcosystemTag": { "type": "string", "enum": ["evm"] },
    "EventConfig": {
      "type": "object",
      "properties": { "event": { "type": "string" } },
      "required": ["event"]
    },
    "EventDecoder": { "type": "string", "enum": ["viem", "hypersync-client"] },
    "GlobalContract_for_ContractConfig": {
      "type": "object",
      "properties": {
        "abi_file_path": { "type": ["string", "null"] },
        "events": {
          "type": "array",
          "items": { "$ref": "#/$defs/EventConfig" }
        },
        "handler": { "type": "string" },
        "name": { "type": "string" }
      },
      "required": ["name", "handler", "events"]
    },
    "HypersyncConfig": {
      "type": "object",
      "properties": { "endpoint_url": { "type": "string" } },
      "required": ["endpoint_url"]
    },
    "Network": {
      "type": "object",
      "properties": {
        "confirmed_block_threshold": {
          "type": ["integer", "null"],
          "format": "int32"
        },
        "contracts": {
          "type": "array",
          "items": { "$ref": "#/$defs/NetworkContract_for_ContractConfig" }
        },
        "end_block": { "type": ["integer", "null"], "format": "int32" },
        "id": { "type": "integer", "format": "uint64", "minimum": 0 },
        "start_block": { "type": "integer", "format": "int32" }
      },
      "oneOf": [
        {
          "type": "object",
          "properties": { "rpc_config": { "$ref": "#/$defs/RpcConfig" } },
          "additionalProperties": false,
          "required": ["rpc_config"]
        },
        {
          "type": "object",
          "properties": {
            "hypersync_config": { "$ref": "#/$defs/HypersyncConfig" }
          },
          "additionalProperties": false,
          "required": ["hypersync_config"]
        }
      ],
      "required": ["id", "start_block", "contracts"]
    },
    "NetworkContract_for_ContractConfig": {
      "type": "object",
      "properties": {
        "abi_file_path": { "type": ["string", "null"] },
        "address": { "$ref": "#/$defs/NormalizedList_for_string" },
        "events": {
          "type": "array",
          "items": { "$ref": "#/$defs/EventConfig" }
        },
        "handler": { "type": "string" },
        "name": { "type": "string" }
      },
      "required": ["name", "address"]
    },
    "NormalizedList_for_string": {
      "type": "array",
      "items": { "type": "string" }
    },
    "RpcConfig": {
      "type": "object",
      "properties": {
        "unstable__sync_config": {
          "anyOf": [
            { "$ref": "#/$defs/SyncConfigUnstable" },
            { "type": "null" }
          ]
        },
        "url": { "type": "string" }
      },
      "required": ["url"]
    },
    "SyncConfigUnstable": {
      "type": "object",
      "properties": {
        "acceleration_additive": {
          "type": ["integer", "null"],
          "format": "uint32",
          "minimum": 0
        },
        "backoff_millis": {
          "type": ["integer", "null"],
          "format": "uint32",
          "minimum": 0
        },
        "backoff_multiplicative": {
          "type": ["number", "null"],
          "format": "float"
        },
        "initial_block_interval": {
          "type": ["integer", "null"],
          "format": "uint32",
          "minimum": 0
        },
        "interval_ceiling": {
          "type": ["integer", "null"],
          "format": "uint32",
          "minimum": 0
        },
        "query_timeout_millis": {
          "type": ["integer", "null"],
          "format": "uint32",
          "minimum": 0
        }
      }
    }
  }
}
