{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "YAML Config with Contract and Events",
  "description": "Schema for a YAML config with a contract and events",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "repository": {
      "type": "string"
    },
    "networks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "rpc_url": {
            "type": "string"
          },
          "start_block": {
            "type": "integer"
          },
          "contracts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "abi": {
                  "type": "string"
                },
                "address": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "events": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "read_entities": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "name": {
                              "type": "string"
                            },
                            "labels": {
                              "type": "array",
                              "items": {
                                "type": "string"
                              }
                            }
                          },
                          "required": [
                            "name"
                          ]
                        }
                      }
                    }
                  },
                  "required": [
                    "name"
                  ]
                }
              }
            },
            "required": [
              "name",
              "abi",
              "address",
              "events"
            ]
          }
        },
        "required": [
          "id",
          "rpc_url",
          "start_block",
          "contracts"
        ]
      }
    }
  },
  "required": [
    "version",
    "description",
    "networks"
  ]
}
