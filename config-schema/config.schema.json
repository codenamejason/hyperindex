{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "YAML Config with Contract and Events",
  "description": "Schema for a YAML config with a contract and events",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "repository": {
      "type": "string"
    },
    "networks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "rpc-url": {
            "type": "string"
          },
          "start-block": {
            "type": "integer"
          }
        },
        "required": [
          "id",
          "rpc-url",
          "start-block"
        ]
      }
    },
    "contracts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "abi": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "address": {
            "type": "string"
          },
          "events": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "requiredEntities": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "Gravatar": {
                        "type": "object",
                        "properties": {
                          "allowArbitrary": {
                            "type": "boolean"
                          },
                          "labels": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          }
                        },
                        "required": [
                          "allowArbitrary",
                          "labels"
                        ]
                      }
                    }
                  }
                }
              },
              "required": [
                "name"
              ]
            }
          }
        },
        "required": [
          "name",
          "abi",
          "address",
          "events"
        ]
      }
    }
  },
  "required": [
    "version",
    "description",
    "repository",
    "networks",
    "contracts"
  ]
}
