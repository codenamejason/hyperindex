        ~schema=Types.{{contract.name.capitalized}}.{{event.name.capitalized}}.eventArgsSchema,
        ~variantAccessor=event => Types.{{contract.name.capitalized}}_{{event.name.capitalized}}(event),
        ~chain,
      )
  {{/each}}
  {{/each}}
  }
}
